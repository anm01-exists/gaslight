# Production Environment Variables
# Copy this to .env.production and update with your production values

# Supabase Configuration (Production)
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key

# App Configuration
VITE_APP_NAME=StudyHub
VITE_APP_URL=https://studyhub.app
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_PAYMENTS=false

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=

# Error Reporting (Optional)
VITE_SENTRY_DSN=
VITE_LOGROCKET_APP_ID=

# API Configuration
VITE_API_BASE_URL=https://api.studyhub.app
VITE_CDN_URL=https://cdn.studyhub.app

# Social Media / Contact
VITE_SUPPORT_EMAIL=support@studyhub.app
VITE_TWITTER_URL=https://twitter.com/studyhub
VITE_INSTAGRAM_URL=https://instagram.com/studyhub

# Payment Integration (Future)
VITE_RAZORPAY_KEY_ID=
VITE_STRIPE_PUBLISHABLE_KEY=

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_WEB_VITALS=true

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_REDIRECT=true
